@model ASM_APDP.Models.User
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Courses to Students</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
            font-family: Arial, sans-serif;
            padding: 0 10px;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 100%;
                height: 100vh;
                background: url("https://images.pexels.com/photos/346529/pexels-photo-346529.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"), #000;
                background-position: center;
                background-size: cover;
                z-index: -1;
            }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background-color: rgba(255, 255, 255, 0.8); /* Nền trắng mờ */
            text-align: center;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-section {
            margin-bottom: 20px;
        }

        .text-center h2 {
            color: #4a9da6;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column; /* Sắp xếp dọc */
            gap: 15px; /* Khoảng cách giữa các trường */
        }

        label {
            font-weight: bold;
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }

        input, select, button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }

        button {
            background-color: #4a9da6;
            color: white;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #5ab6c8;
            }

        .center-button {
            display: flex;
            justify-content: space-between;
            gap: 20px; /* Khoảng cách giữa các nút */
        }

            .center-button button {
                flex: 1; /* Kích thước các nút bằng nhau */
            }

        .button-container {
            margin-top: 20px; /* Tạo khoảng cách phía trên */
        }

        .custom-button {
            background-color: #4a9da6;
            color: white;
            font-size: 16px;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%; /* Chiều rộng nút */
        }

            .custom-button:hover {
                background-color: #4a9da6;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Assign Courses to Students</h1>
        <!-- Assign Courses -->
        <div class="form-section">
            <div class="text-center">
                <h2>Assign Course</h2>
            </div>
            <form id="assign-form">
                <div>
                    <label for="student-id">Student ID</label>
                    <input type="text" id="student-id" placeholder="Enter Student ID">
                </div>
                <div>
                    <label for="student-name">Student Name</label>
                    <input type="text" id="student-name" placeholder="Enter Student Name">
                </div>
                <div>
                    <label for="assign-course">Select Course</label>
                    <select id="assign-course">
                        <option value="" disabled selected>Select a course</option>
                        <!-- Dynamic course options will be populated here -->
                    </select>
                </div>
                <div class="center-button">
                    <button type="submit">Assign Course</button>
                    <button type="button" id="view-assigned-courses" onclick="window.location.href='view-all-courses.html'">View All Assigned Courses</button>
                </div>
                <div class="button-container">
                    <button type="button" class="custom-button" onclick="window.location.href='admin-home.html'">Back</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

