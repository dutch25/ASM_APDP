@{
    ViewBag.Title = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Manage Students</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	@* <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"> *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
	<link rel="stylesheet" href="style.css">
	<link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />	
	<link href="~/Content/site.css" rel="stylesheet" />
</head>
</html>
<body>
    <div class="container">
        <h1>Course Management</h1>
        
        <!-- Add/Edit/Delete Courses -->
        <div class="form-section">
            <h2>Add/Edit Course</h2>
            <form id="course-form">
                <div>
                    <label for="course-id">Course ID</label>
                    <input type="text" id="course-id" placeholder="Enter Course ID">
                </div>
                <div>
                    <label for="course-name">Course Name</label>
                    <input type="text" id="course-name" placeholder="Enter Course Name">
                </div>
                <div>
                    <label for="course-desc">Course Description</label>
                    <input type="text" id="course-desc" placeholder="Enter Course Description">
                </div>
                <div>
                    <label for="course-duration">Duration (weeks)</label>
                    <input type="number" id="course-duration" placeholder="Enter Duration">
                </div class="center-button">
                <button type="submit">Save Course</button>
                <button id="view-all-courses">View All Courses</button>
            </form>
        </div>

        <h1>Assign Courses to Students</h1>

        <!-- Assign Courses -->
        <div class="form-section">
            <h2>Assign Course</h2>
            <form id="assign-form">
                <div>
                    <label for="student-id">Student ID</label>
                    <input type="text" id="student-id" placeholder="Enter Student ID">
                </div>
                <div>
                    <label for="assign-course">Select Course</label>
                    <select id="assign-course">
                        <!-- Dynamic course options go here -->
                    </select>
                </div class="center-button">
                <button type="submit">Assign Course</button>
                <button id="view-assigned-courses">View All Assigned Courses</button>
            </form>
        </div>        
    </div>
</body>
</html>
