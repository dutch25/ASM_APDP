@model ASM_APDP.Models.User
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Courses</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background: #f9f9f9;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px auto;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #4a9da6;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Nút thiết kế */
        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .custom-button {
            background-color: #4a9da6; /* Màu nền xanh */
            color: white; /* Màu chữ */
            padding: 10px 20px; /* Khoảng cách bên trong nút */
            border: none; /* Loại bỏ viền */
            border-radius: 5px; /* Bo tròn góc */
            font-size: 16px; /* Kích thước chữ */
            cursor: pointer; /* Thay đổi con trỏ khi hover */
            text-align: center;
            display: inline-block;
        }

            .custom-button:hover {
                background-color: #4a9da6; /* Hiệu ứng khi hover */
            }
    </style>
</head>
<body>
    <h1>All Courses</h1>
    <table>
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
    <div class="button-container">
        <button class="custom-button" onclick="window.location.href='assign-course-students.html'">Back</button>
    </div>
</body>
</html>

