@model ASM_APDP.ViewModels.AssignCoursesToStudentsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
    <link rel="stylesheet" href="~/css/styleIndex.css" asp-append-version="true">
    <title>Assign Courses to Students</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            width: 100%;
            font-family: Arial, sans-serif;
            padding: 0 10px;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 100%;
                height: 100vh;
                background: url("https://images.pexels.com/photos/346529/pexels-photo-346529.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"), #000;
                background-position: center;
                background-size: cover;
                z-index: -1;
            }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background-color: rgba(255, 255, 255, 0.8); /* Nền trắng mờ */
            text-align: center;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-section {
            margin-bottom: 20px;
        }

        .text-center h2 {
            color: #4a9da6;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column; /* Sắp xếp dọc */
            gap: 15px; /* Khoảng cách giữa các trường */
        }

        label {
            font-weight: bold;
            text-align: left;
            display: block;
            margin-bottom: 5px;
        }

        input, select, button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }

        button {
            background-color: #4a9da6;
            color: white;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #5ab6c8;
            }

        .center-button {
            display: flex;
            justify-content: space-between;
            gap: 20px; /* Khoảng cách giữa các nút */
        }

            .center-button button {
                flex: 1; /* Kích thước các nút bằng nhau */
            }

        .button-container {
            margin-top: 20px; /* Tạo khoảng cách phía trên */
        }

        .custom-button {
            background-color: #4a9da6;
            color: white;
            font-size: 16px;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%; /* Chiều rộng nút */
        }

            .custom-button:hover {
                background-color: #4a9da6;
            }
    </style>
</head>

<body>
    <div class="menu">
        <ul class="menu-content">
            <li class="">
                @{
                    var username = Context.Session.GetString("Username");
                    if (!string.IsNullOrEmpty(username))
                    {
                        <a><span class="material-symbols-outlined">account_circle</span><span>Welcome, @username</span></a>
                    }
                }
            </li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDashBoard"><span class="material-symbols-outlined">home</span><span>Home</span></a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="CourseManagement"><span class="material-symbols-outlined">book</span><span>Course Management</span></a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AssignCoursesToStudents"><span class="material-symbols-outlined">assignment_ind</span><span>Assign Courses To Students</span></a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile"><span class="material-symbols-outlined">person</span><span>Profile</span></a></li>
            <li><a href="#"><span class="material-symbols-outlined">email</span><span>Contact</span></a></li>
            <li>
                <a href="javascript:document.getElementById('logout-form').submit();">
                    <span class="material-symbols-outlined">logout</span><span>Logout</span>
                </a>
                <form id="logout-form" asp-area="" asp-controller="User" asp-action="Logout" method="post" style="display: none;"></form>
            </li>
        </ul>
    </div>

    <div class="container">
        <h1>Assign Courses To Students</h1>
        <!-- Display Success or Error Message -->
        <div class="form-section">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="AssignStudentToClass" method="post">
                <div class="form-group">
                    <label for="studentId">Student ID:</label>
                    <input asp-for="StudentId" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="className">Class Name:</label>
                    <input asp-for="ClassName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="courseId">Select Course:</label>
                    <select asp-for="CourseId" class="form-control" required>
                        <option value="">-- Select Course --</option>
                        @foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.CourseID">@course.CourseName</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Assign</button>
                <button type="button" class="custom-button" id="back" onclick="window.location.href='@Url.Action("ViewAllAssignCourses", "Admin")'">View All</button>
                @* <button type="button" id="view-all-assign-courses" asp-controller="Admin" asp-action="ViewAllAssignCourses">View All</button> *@
            </form>
        </div>
           
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
